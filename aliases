# Vundle
alias vundle="vim -u ~/.vimrc.bundles +BundleInstall +qa"

# Shortcuts
alias aliases="nvim ~/.dotfiles/aliases"
alias box="~/Dropbox"
alias dotfiles="~/.dotfiles"
alias notes="~/dropbox/notes"
alias drafts="cd ~/drafts && nvim ."

# Rails
alias migrate="rake db:migrate db:rollback && rake db:migrate db:test:prepare"

# Git
alias -g browse="hub browse"
alias -g poop=pop
alias -g superlog="log --graph --pretty=format:'%cred%h%creset -%c(yellow)%d%creset %s %cgreen(%cr) %c(bold blue)<%an>%creset' --abbrev-commit"
alias -g obranches="branch --sort=committerdate"

# Misc
alias barn="yarn install && bower install"
alias hit="pbpaste | highlight --syntax=js --style=zenburn --line-numbers -O rtf | pbcopy"
alias nombom="npm cache clear && bower cache clean && rm -rf node_modules bower_components && npm i && bower i"
alias omgderp="rm -rf $TMPDIR/async-disk-cache"
alias reload="source ~/.zshrc"
alias fixmycamera="sudo killall VDCAssistant && killall AppleCameraAssistant"
